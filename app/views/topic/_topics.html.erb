<div class="Topic">
  <% @topics.each do |topic| %>
    <%= link_to topic_path(topic) do %>
      <div class="Topic__board">
        <ul class="Topic__board__ul">
          <li class="Topic__board__li--title">
            <span class = "Topic__board__li--title--left"><%= topic.posts.count %></span>
            <span class = "Topic__board__li--title--right"><%= topic.title %></span>
          </li>
          <li class="Topic__board__li--description">
            <span class = "Topic__board__li--desxription--text"><%= topic.description %></span>
            <p class = "Topic__board__li--description--btn">OPEN</p>
          </li>
        </ul>
      </div>
    <% end%>
  <% end %>
</div>
