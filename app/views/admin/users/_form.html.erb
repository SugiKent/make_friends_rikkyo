<%= form_for @user, :url => { :controller => "admin/users", :action => :update } do |f| %>
<div class="row">
  <div class="form-group col-xs-12">
    <label class="form-label">ニックネーム</label>
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="form-group col-xs-12">
    <label class="form-label">Twitter</label>
    <%= f.text_field :twitter_id, class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="form-group col-xs-12">
    <label class="form-label Admin__text-black">公開状態</label>
    <%= f.select :published, {"非公開"=>0,"公開"=>1}, class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <%= f.submit class: "btn btn-success" %>
  </div>
</div>
<% end %>
