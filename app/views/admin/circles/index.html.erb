<p id="notice"><%= notice %></p>

<h1>サークル一覧</h1>

<table class="table table-striped Admin__table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circles.each do |circle| %>
      <tr>
        <td>
          <%= circle.name %>
        </td>
        <td>
          <%= circle.category %>
        </td>
        <td><%= link_to 'Edit', edit_admin_circle_path(circle), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

