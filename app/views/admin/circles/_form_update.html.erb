<%= form_for @circle, :url => { :controller => "admin/circles", :action => :update } do |f| %>
  <% if @circle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@circle.errors.count, "error") %> prohibited this admin_circle from being saved:</h2>

      <ul>
      <% @circle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-xs-6">
      <label>サークル名</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group col-xs-6">
      <label>サークルカテゴリー</label>
      <%= f.select :category, Circle.categories.keys.to_a, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <%= f.submit "アップデート", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-6">
    <%= link_to 'Destroy', admin_circle_path(@circle), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>
