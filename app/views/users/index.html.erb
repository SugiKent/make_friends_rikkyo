<% @users.each do |user| %>
  <div class="User">
    <div class="User__twitter">
      <h2><a href="https://twitter.com/<%= user.twitter_id %>">@<%= user.twitter_id %></a></h2>
    </div>
    <div class="User__name">
      <p>
        <%= user.name %> / <%= Department.find(user.department_id).department_name %>
      </p>
    </div>
  </div>
<% end %>

<div class="User__button">
  <%= link_to "NEW", new_user_path, class: "Button Button__new" %>
</div>
